<UserControl x:Class="Final_project.Components.ReportForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:components="clr-namespace:Final_project.Components"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="900">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Grid.IsSharedSizeScope="True">
            
            <!-- Row definitions -->
            <Grid.RowDefinitions>
                
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

         
            <!-- The Tittle -->
            <Grid Grid.Row="0" Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"  SharedSizeGroup="lab" />
                    <ColumnDefinition Width="*" MaxWidth="250"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"  Text="Tittle" FontWeight="Bold" />
                <TextBox Grid.Column="1" Margin="30 0 0 0" FontWeight="Bold" Text= "{Binding Tittle, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>


            <!-- The client -->
            <Grid Grid.Row="1" Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"  SharedSizeGroup="lab" />
                    <ColumnDefinition Width="*" MaxWidth="250"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"  Text="Kunde" FontWeight="Bold" />
                <TextBox Grid.Column="1"  Margin="30 0 0 0"  FontWeight="Bold" Text= "{Binding Kunde}" />

            </Grid>

            <!-- Status of the report -->
            <Grid Grid.Row="2" Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="lab"/>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="lab"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" FontWeight="Bold" Text="Status" />
                <CheckBox Grid.Column="1"  Margin="30 4 0 0" IsChecked="{Binding Status}" />
            </Grid>

                <Grid Grid.Row="3" Margin="-15 0 0 0">
                    <components:ImageCollectionView DataContext="{Binding ImageCollectionViewModel}" HorizontalAlignment="Left" />
                </Grid>




            </Grid>

        <WrapPanel Grid.Row="1" Margin="0 50 0 0">
            <Button Margin ="0 0 10 0" Command="{Binding CancelCommand}" Content="Cancel" Style="{StaticResource ButtonSecondary}"/>
            <Button Margin ="0 0 10 0" Command="{Binding SubmitCommand}" Content="Submit" IsEnabled="{Binding CanSubmit}"/>
            <Button Margin ="0 0 10 0" Command="{Binding GenerateReport}" Content="Generate report" Style="{StaticResource ButtonSecondary}"/>
     
        </WrapPanel>

     
              </Grid>
        </ScrollViewer>
</UserControl>
