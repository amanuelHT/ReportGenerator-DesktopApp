<UserControl x:Class="Final_project.Components.TextBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Final_project.Components" 
             xmlns:converters="clr-namespace:Final_project.Converters"
             mc:Ignorable="d" 
             d:DesignWidth="200" Background="White">

    <UserControl.Resources>
        <converters:StringIsNullOrEmptyToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter"/>
    </UserControl.Resources>

    <StackPanel Margin="20 10">
        <!-- Label or Watermark -->
        <TextBlock Text="{Binding Watermark, RelativeSource={RelativeSource AncestorType={x:Type local:TextBoxView}}}"
                   IsHitTestVisible="False" Padding="5" Foreground="Gray" VerticalAlignment="Center"/>

        <!-- Input Field -->
        <TextBox Text="{Binding Text, RelativeSource={RelativeSource AncestorType={x:Type local:TextBoxView}}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Background="White" Foreground="Black" BorderBrush="Gray" BorderThickness="1"
                 VerticalContentAlignment="Center" Padding="5"/>
    </StackPanel>
</UserControl>
