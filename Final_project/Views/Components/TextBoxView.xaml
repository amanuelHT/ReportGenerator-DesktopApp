<UserControl x:Class="Final_project.Components.TextBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Final_project.Components" 
             mc:Ignorable="d" 
             x:Name="mytextbox"
             d:DesignWidth="200" Background="Transparent">

    <StackPanel Margin="20 10">
        <!-- Label or Watermark -->
        <TextBlock Text="{Binding ElementName=mytextbox, Path=Watermark}"
                   Foreground="White" FontSize="13" Margin="0 0 0 8"/>

        <!-- Input Field -->
        <Grid>
            <TextBox Text="{Binding ElementName=mytextbox, Path=Text}"
                     x:Name="textbox"
                     Margin="0"
                     Foreground="#F0F0F0" 
                     Background="#333333" 
                     FontSize="11"
                     BorderThickness="0"
                     Padding="10"
                     Width="200"/>
            <!-- Add your TextBox style here -->
        </Grid>
    </StackPanel>
</UserControl>
