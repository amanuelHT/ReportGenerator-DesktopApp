<Window x:Class="Final_project.Views.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modal Window" Height="400" Width="600">
    <Grid>
        <!-- Modal content goes here -->
        <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Margin="50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Close button -->
                <Button Grid.Row="0" Grid.Column="1" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Margin="5" Click="CloseButton_Click"/>

                <!-- Content -->
                <ContentPresenter Grid.Row="1" Margin="20" Content="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.Content}" />

                <!-- Footer -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="OK" Margin="5"/>
                    <Button Content="Cancel" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
 