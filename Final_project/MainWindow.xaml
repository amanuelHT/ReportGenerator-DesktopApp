    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:AddReportVM}">
            <views:AddReportView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:EditReportVM}">
            <views:EditReportView />
        </DataTemplate>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <modalcontrol:Modal Panel.ZIndex="1" IsOpen="{Binding IsFormOpen}">
                <ContentControl Margin="50 25" Content="{Binding CurrentVM}" />
            </modalcontrol:Modal>

            <views:HomeView
                MaxWidth="1000"
                Margin="25"
                DataContext="{Binding HomeVM}" />
        </Grid>
    </ScrollViewer>
</Window>



