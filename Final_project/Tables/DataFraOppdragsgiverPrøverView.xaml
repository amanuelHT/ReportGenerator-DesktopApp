<UserControl x:Class="Final_project.Tables.DataFraOppdragsgiverPrøverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Final_project.Tables" 
             xmlns:tablesvm="clr-namespace:Final_project.ViewModels.TablesVM"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=tablesvm:DataFraOppdragsgiverPrøverVM}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Datomottatt -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Mottatt Dato:" FontWeight="Bold" Margin="5"/>
            <DatePicker Grid.Column="1" SelectedDate="{Binding Datomottatt, Mode=TwoWay}" Margin="5"/>
        </Grid>

        <!-- Overdekningoppgitt -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Overdekning Oppgitt:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Column="1" Text="{Binding Overdekningoppgitt, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        </Grid>

        <!-- Dmax -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Dmax:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Column="1" Text="{Binding Dmax, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        </Grid>

        <!-- KjerneImax -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Kjerne I max:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Column="1" Text="{Binding KjerneImax, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        </Grid>

        <!-- KjerneImin -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Kjerne I min:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Column="1" Text="{Binding KjerneImin, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        </Grid>

        <!-- OverflateOK -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Overflate OK:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Column="1" Text="{Binding OverflateOK, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        </Grid>

        <!-- OverflateUK -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Overflate UK:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Column="1" Text="{Binding OverflateUK, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        </Grid>

        <!-- Submit and Remove Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Margin="5" Content="Submit" Command="{Binding SubmitCommand}"/>
            <Button Margin="5" Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
